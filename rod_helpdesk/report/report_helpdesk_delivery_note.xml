<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="helpdesk_ticket_delivery_note_id">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="page" style="min-height: 100%;">
                            <t t-if="o and 'company_id' in o">
                                <t t-set="company" t-value="o.company_id"></t>
                            </t>
                            <t t-if="not o or not 'company_id' in o">
                                <t t-set="company" t-value="res_company"></t>
                            </t>
                            <div class="header" style="">
                                <div class="row mt32 mb32"
                                     style="padding-bottom: 10px;border-bottom:1px solid #dddbdb;">
                                    <div class="col-4 text-center" style="">
                                        <tr>
                                            <!--<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 90px;" />-->
                                            <img t-if="company.logo"
                                                 t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"
                                                 style="resize:both;width:95%;height:auto"/>
                                        </tr>
                                    </div>
                                    <div class="col-4 text-center" style="">
                                        <h2 style="padding-top: 20px;">
                                            <span>
                                                <font>Soporte tecnico</font>
                                            </span>
                                        </h2>
                                    </div>
                                    <div class="col-4 text-center"
                                         style="font-style:arial;font-size:10px;padding-top:10px;">
                                        <span t-field="company.partner_id" style="font-size: 12px;"/>
                                        <br/>
                                        <span>UBICACION EN SANTA CRUZ</span>
                                        <br/>
                                        <span>PISO</span>
                                        <br/>
                                        <span t-field="company.partner_id.phone"/>
                                        <br/>
                                        <span>Santa Cruz</span>
                                        <br/>
                                        <span t-field="company.partner_id.country_id"/>
                                        <br/>
                                    </div>
                                </div>
                            </div>
                            <div class="main">
                                <table class="table table-bordered">
                                    <tr>
                                        <td><font>EMPRESA SOLICITANTE</font></td>
                                        <td><span t-field="o.partner_id"/></td>
                                    </tr>
                                    <tr>
                                        <td><font>FECHA DE INICIO</font></td>
                                        <td><span t-field="o.create_date"/></td>
                                        <td>FECHA DE FINALIZACION</td>
                                        <td><span t-field="o.closed_date"/></td>
                                    </tr>
                                    <tr>
                                        <td>TIPO DE CONTRATO</td>
                                        <td><span t-field="o.type_contract"/></td>
                                        <td>GARANTIA</td>
                                        <td></td>
                                    </tr>
                                </table>
                                <br/>
                                <center><h2>DATOS DEL EQUIPO</h2></center>
                                <table class="table table-bordered">
                                    <tr>
                                        <td>
                                            EQUIPO
                                        </td>
                                        <td>
                                            MARCA
                                        </td>
                                        <td>
                                            MODELO
                                        </td>
                                        <td>
                                            SERIE
                                        </td>
                                    </tr>
                                    <t t-foreach="o.accesory_features" t-as="p">
                                        <tr>
                                            <td>
                                                <span t-field="p.name"/>
                                            </td>
                                            <td>
                                                <span t-field="p.brand_id"/>
                                            </td>
                                            <td>
                                                <span t-field="p.model_id"/>
                                            </td>
                                            <td>
                                                <span t-field="p.serial_number"/>
                                            </td>
                                        </tr>
                                    </t>
                                </table>

                                <table class="table table-bordered">
                                    <tr>
                                        <td>
                                            CONDICIONES DEL EQUIPO
                                        </td>
                                        <td>
                                            <span t-field="o.description"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            ACCESORIOS
                                        </td>
                                        <td>
                                            <t t-foreach="o.accesories_ids" t-as="q">
                                                <span t-field="q.name" />
                                            </t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            DESCRIPCION DE LA FALLA
                                        </td>
                                        <td>
<!--                                            <span t-field="o.description"/>-->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            TRABAJO REALIZADO
                                        </td>
                                        <td>
                                            <span t-field="o.description"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            OBSERVACIONES O RECOMENDACIONES
                                        </td>
                                        <td>
                                            <span t-field="o.remarks"/>
                                        </td>
                                    </tr>
                                </table>

                            </div>
                            <div class="footer">
                                <h2>Pie de pagina</h2>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
