<odoo>
    <data>
        <record model="ir.ui.view" id="helpdesk_ticket_view_form_inh">
            <field name="name">helpdesk.ticket.view.form.inh</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main']" position="after">
                    <group>
                        <field name="accesory_features"/>
                    </group>
                    <group>
                        <field name="accesories_ids" />
                    </group>
                </xpath>
                <xpath expr="//field[@name='channel_id']" position="after">
                    <field name="type_contract"/>
                    <field name="equipment_conditions"/>
<!--                    <field name="accesories_ids" widget="many2many_tags"/>-->
                    <field name="ribon" invisible="1"/>
                </xpath>
                <xpath expr="sheet/widget[1]" position="after">
                    <widget name="web_ribbon" title="Hecho" attrs="{'invisible': [('ribon','!=',True)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>