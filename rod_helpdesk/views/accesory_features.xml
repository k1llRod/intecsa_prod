<odoo>
    <data>
        <!-- Vista Árbol de Modelo accesory feature -->

        <record model="ir.ui.view" id="accesory_feature_tree_id">
            <field name="name">accesory.features.tree</field>
            <field name="model">accesory.features</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="feature_type"/>
                </tree>
            </field>
        </record>

        <!-- Vista Formulario payroll payments -->

        <record model="ir.ui.view" id="accesory_features_form_id">
            <field name="name">accesory.features.form</field>
            <field name="model">accesory.features</field>
            <field name="arch" type="xml">
                <form string="Caracteristicas" class="oe_left oe_edit_only oe_form_required">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" string="Nombre"/>
                                <field name="description"/>
                                <field name="feature_type"/>
                            </h1>
                        </div>

                    </sheet>

                </form>
            </field>
        </record>

        <!-- Accion para visualizar payroll payments -->

        <record id="action_accesory_features" model="ir.actions.act_window">
            <field name="name">Accesorios y caracteristicas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">accesory.features</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>