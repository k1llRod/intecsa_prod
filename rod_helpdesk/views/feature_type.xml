<odoo>
    <data>
        <!-- Vista Ãrbol de Modelo accesory feature -->

        <record model="ir.ui.view" id="feature_type_tree_id">
            <field name="name">feature.type.tree</field>
            <field name="model">feature.type</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Vista Formulario payroll payments -->

        <record model="ir.ui.view" id="feature_type_form_id">
            <field name="name">feature.type.form</field>
            <field name="model">feature.type</field>
            <field name="arch" type="xml">
                <form string="Caracteristicas" class="oe_left oe_edit_only oe_form_required">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" string="Nombre"/>
                                <field name="description"/>
                            </h1>
                        </div>

                    </sheet>

                </form>
            </field>
        </record>

        <!-- Accion para visualizar payroll payments -->

        <record id="action_feature_type" model="ir.actions.act_window">
            <field name="name">Tipo de caracteristica</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">feature.type</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>