<odoo>
    <data>
        <record model="ir.ui.view" id="res_partner_tree_inh">
            <field name="name">res.partner.tree.inh</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <header>
                        <button name="assign_client" type="object" class="oe_highlight"
                                string="Reasignar clientes" />
                    </header>
                </xpath>
                <xpath expr="field[@name='vat']" position="after">
                    <field name="sale_order_count" optional="hide"/>
                    <field name="sale_order_count_expired" optional="hide"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_partner_form_inh">
            <field name="name">res.partner.form.inh</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//span[@name='address_name']" position="before">
                    <xpath expr="//field[@name='category_id']" position="move"/>
<!--                    <field name="category_id" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>-->
                    <field name="class_partner"/>
                    <field name="reassigned"/>
                    <field name="state_id" string="Regional"/>
                    <field name="sale_order_count_expired"/>
                </xpath>
<!--                <xpath expr="//field[@name='category_id']" position="attributes">-->
<!--                    <attribute name="invisible">1</attribute>-->
<!--                </xpath>-->
                <xpath expr="//sheet/group/group/div/field[@name='state_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/group/group/div/field[@name='zip']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/group/group/div/field[@name='city']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form/sheet/group/group[2]/field[@name='mobile']" position="replace">
                    <field name="mobile" string="Teles. de contacto" widget="phone"/>
                </xpath>
                <xpath expr="//field[@name='child_ids']/form//field[@name='mobile']" position="after">
                    <field name="contact_ids" widget="many2many_tags" readonly="1"/>
                </xpath>

<!--                <xpath expr="//sheet/group/group/div/field[@name='country_id']" position="attributes">-->
<!--                    <attribute name="default">29</attribute>-->
<!--                </xpath>-->

            </field>
        </record>

        <record model="ir.ui.view" id="res_partner_acrux_chat_form_inh">
            <field name="name">res.partner.acrux.chat.form.inh</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="sms.res_partner_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group[2]/field[@name='mobile']" position="replace">
                    <field name="mobile" string="Tel. de contacto" widget="phone"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_res_partner_filter_inh">
            <field name="name">res.partner.select</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name" filter_domain="['|', '|', '|', '|',('display_name', 'ilike', self), ('ref', '=', self), ('email', 'ilike', self), ('vr_contact','ilike',self), ('name', 'ilike', self), ('vr_razon_social','ilike',self)]"/>
<!--                    <separator />-->
                </xpath>
            </field>
        </record>


    </data>
</odoo>
