<odoo>
    <data>
        <record model="ir.ui.view" id="stock_move_line_tree_inh">
            <field name="name">stock.move.line.tree.inh</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="cost_product"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="view_stock_move_line_detailed_operation_tree_inh">
            <field name="name">stock.move.line.operations.tree.inh</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="cost_product"/>
                </xpath>
                <xpath expr="//field[@name='picking_id']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>